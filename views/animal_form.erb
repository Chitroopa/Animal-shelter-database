<form action="/animals" method="post">
  <div class="form-group">
    <label for="name">Enter the pet's name:</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="gender">Enter the pet's gender:</label>
    <input type="text" name="gender" class="form-control">
  </div>
  <div class="form-group">
    <label for="date">Enter the pet's date of admittance:</label>
    <input type="text" name="date" class="form-control">
  </div>
  <div class="form-group">
    <label for="type">Enter the pet's type:</label>
    <input type="text" name="type" class="form-control">
  </div>
  <div class="form-group">
    <label for="breed">Enter the pet's breed:</label>
    <input type="text" name="breed" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Save pet</button>

</form>
